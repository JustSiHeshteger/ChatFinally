<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ListBoxItem" x:Key="ListBoxItemUser">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>

                    <Grid Margin="0, 2, 0, 2">
                        <!--Обводка-->
                        <Rectangle RadiusX="6" RadiusY="6">
                            <Rectangle.Style>
                                <Style TargetType="{x:Type Rectangle}">
                                    <Setter Property="Fill" Value="Wheat"/>
                                </Style>
                            </Rectangle.Style>
                        </Rectangle>

                        <StackPanel Orientation="Vertical" Margin="5, 2, 5, 2">

                            <TextBlock Text="{Binding UserName}" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Id}" FontSize="8" FontWeight="SemiBold" Foreground="Gray" VerticalAlignment="Center" />

                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>